""" JUSTE PRIX """

juste_prix = random.randint(1,100)
print ("Saisissez un nombre entre 1 et 100 :\n")
nb = int(input())
while nb != juste_prix:
    if nb < juste_prix:
        print("C'est plus!\n")
        nb = int(input())
        continue
    if nb > juste_prix:
        print("C'est moins!\n")
        nb = int(input())
        continue
print("Bravo! C'était bien le :", juste_prix)
